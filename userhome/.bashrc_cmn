# 「ターミナルのメッセージは英語」「lsで日本語ファイルを正常表示」を両立
export LANG=ja_JP.UTF-8
export LANGUAGE=en_US.UTF-8

# git logの日本語対応
export LESSCHARSET=utf-8

# alias
alias e=explorer.exe
alias vi=nvim
alias f=fish
alias t=tmux

# poetry
export PATH=$HOME/.local/bin:$PATH

# go
# export PATH=$PATH:$(go env GOPATH)/bin
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# fzf
[ -f ~/.fzf.bash ] && source ~/.fzf.bash

# vscodeのターミナルでtmux実行時にcodeコマンドに失敗する問題を解消するコマンド
# 実行するとクリップボードに文字列が入るので、vscodeのターミナルのtmux上で以下を実行する
# export VSCODE_IPC_HOOK_CLI=[クリップボードの文字列]
alias recode='cd ~ && echo $VSCODE_IPC_HOOK_CLI | win32yank.exe -i'

# lessのオプション
export LESS="-i -M -R -W"
# -i   検索時に全部小文字で入力したときだけ、大文字小文字を無視する。
# -M   詳しいプロンプトを表示する。
# -R   ANSI カラーエスケープシーケンスを解するようになる。
# -W   一度に2行以上移動した場合、新たに表示した最初の行をハイライトする。
export PAGER=less
