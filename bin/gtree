#!/usr/bin/bash
# tree -a -C -I $((cat .gitignore 2> /dev/null || cat $(git rev-parse --show-toplevel 2> /dev/null)/.gitignore 2> /dev/null || echo "node_modules") | egrep -v "^#.*$|^[[:space:]]*$" | tr "\\n" "|" | rev | cut -c 2- | rev)

# .gitも無視するように改良
tree -a -C -I $(((cat .gitignore 2> /dev/null && ls -1 .git 2> /dev/null ) || (cat $(git rev-parse --show-toplevel 2> /dev/null)/.gitignore 2> /dev/null && ls -1 $(git rev-parse --show-toplevel 2> /dev/null)/.git 2> /dev/null) || echo "node_modules") | egrep -v "^#.*$|^[[:space:]]*$" | tr "\\n" "|" | rev | cut -c 2- | rev)

# 参考 https://gist.github.com/jpwilliams/dabff82b0ceb95dd57a7552ea7f2d675
